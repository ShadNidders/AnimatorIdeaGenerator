<body>
    <h1>Generador de Temas Aleatorios</h1>
    <button id="generateBtn">Generar Tema</button>
    <label for="themeCount">Cantidad de temas:</label>
    <input type="range" id="themeCount" name="themeCount" min="2" max="32" value="2">
    <span id="themeCountValue">1</span>
    <div id="themeContainer">
        <p id="themeText">Sugiero que animes:</p>
        <p id="themeIdeas">¡Haz clic en el botón para generar un tema aleatorio!</p>
    </div>

    <script>
        const themes = [
            "Pelea",
            "En el aire",
            "Poderes elementales",
            "Magia",
            "Viaje en el tiempo",
            "Mundo submarino",
            "Aventura espacial",
            "Superhéroes",
            "Robots",
            "Criaturas fantásticas",
            "impact frame",
            "Naturaleza",
            "Tecnología",
            "Espacio",
            "Deportes",
            "elementos",
            "dia normal",
            "camara lenta",
            "grandes velocidades",
            "edificios",
            "armas blancas",
            "armas de fuego",
            "entrenamiento",
            "allanamiento militar"
        ];

        const generateBtn = document.getElementById("generateBtn");
        const themeText = document.getElementById("themeText");
        const themeIdeas = document.getElementById("themeIdeas");

        generateBtn.addEventListener("click", () => {
            const randomIndex = Math.floor(Math.random() * themes.length);
            const randomTheme = themes[randomIndex];
            themeIdeas.textContent = `¡Haz clic en el botón para generar un tema aleatorio! Suguiero que animes: ${randomTheme}!`;
        });
    </script>
